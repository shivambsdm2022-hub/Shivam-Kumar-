#include <stdio.h>

int main() {
    int cost[10][10], visited[10];
    int n, i, j, min, u, v, total = 0;

    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter cost matrix:\n");
    for(i = 0; i < n; i++)
        for(j = 0; j < n; j++)
            scanf("%d", &cost[i][j]);

    for(i = 0; i < n; i++)
        visited[i] = 0;

    visited[0] = 1;

    for(int count = 0; count < n - 1; count++) {
        min = 999;
        for(i = 0; i < n; i++) {
            if(visited[i]) {
                for(j = 0; j < n; j++) {
                    if(!visited[j] && cost[i][j] < min) {
                        min = cost[i][j];
                        u = i;
                        v = j;
                    }
                }
            }
        }
        visited[v] = 1;
        total += min;
        printf("Edge %d - %d : %d\n", u, v, min);
    }

    printf("Total cost of MST = %d\n", total);
    return 0;
}
